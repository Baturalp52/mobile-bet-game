<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/couponLinearLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:elevation="8dp"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/allCouponLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/match_item_background"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgLeagueLogo"
            android:layout_width="35dp"
            android:layout_height="37dp"
            android:src="@drawable/bulletin_icon" />

        <TextView
            android:id="@+id/allCouponsId"
            android:layout_width="315dp"
            android:layout_height="29dp"
            android:text="TextView"
            android:textAlignment="textEnd" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/allCouponsDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="TextView" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/allCouponsMatchCount"
            android:layout_width="114dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#D3D3D3"
            android:text="Match Count: "
            android:textColor="#000000" />

        <TextView
            android:id="@+id/allCouponsBetValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#696969"
            android:text="1"
            android:textAlignment="center"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/allCouponsOdd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="1.46"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/allCouponsEstimatedPrice"
            android:layout_width="102dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="TextView" />

        <ImageView
            android:id="@+id/allCouponsWinLose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAlignment="textEnd"
            app:srcCompat="@drawable/baseline_check_circle_24" />
    </LinearLayout>

</LinearLayout>
